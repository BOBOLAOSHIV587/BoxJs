{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@boxapp/core-*": ["packages/core/*/src"],
      "@boxapp/proxy-*": ["packages/proxy/*/src"],
      "@boxapp/script-*": ["packages/scripts/*/src"],
      "@boxapp/serverless-*": ["packages/serverless/*/src"]
    }
  },
  "include": ["packages/*/*/src", "packages/*/*/__tests__"]
}
